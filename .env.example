# GitHub API Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_USERNAME=peterruler

# API Limits (nur als Info-Grenze - GitHub Rate Limit hat Vorrang)
MAX_API_REQUESTS=5000

# User Processing Limits
MAX_USERS_TO_PROCESS=200

# Cache Configuration
CACHE_TTL_MINUTES=30

# Error Handling & Retry Configuration
MAX_ERRORS=10
MAX_RETRIES=3
RETRY_BASE_DELAY=1.0
RETRY_MAX_DELAY=60.0

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
